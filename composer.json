{
    "name": "zoparga/laravel-model-status",
    "description": "Add many status to many model with a single trait. E.g.: many shipping address for a customer.",
    "keywords": [
        "zoparga",
        "laravel",
        "laravel-model-status"
    ],
    "homepage": "https://github.com/zoparga/laravel-model-status",
    "license": "MIT",
    "authors": [
        {
            "name": "Papp Zolt√°n",
            "email": "zoltan@pappz.hu",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.3|^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.37"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "pestphp/pest": "^1.18",
        "pestphp/pest-plugin-laravel": "^1.1",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "zoparga\\ModelStatus\\": "src",
            "zoparga\\ModelStatus\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "zoparga\\ModelStatus\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "zoparga\\ModelStatus\\ModelStatusServiceProvider"
            ],
            "aliases": {
                "ModelStatus": "zoparga\\ModelStatus\\ModelStatusFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
